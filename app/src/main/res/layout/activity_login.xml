<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aliv3.RickshawWalaUser.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/userlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User Login"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/editsignemail"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/editsignpassword"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editsignemail"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/buttonlogin"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editsignpassword"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:text="Login" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_regd_click_here"
            android:textAlignment="center"
            android:id="@+id/textregister"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
