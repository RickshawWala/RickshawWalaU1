<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aliv3.RickshawWalaUser.ProfileActivity">

    <TextView
        android:id="@+id/namePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Name"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:ems="30"
        android:gravity="center"
        android:layout_below="@+id/namePrompt"
        android:layout_alignLeft="@+id/namePrompt"
        android:layout_alignStart="@+id/namePrompt" />

    <TextView
        android:id="@+id/emailPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:text="Email"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailPrompt"
        android:text="User Email"
        android:ems="30"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/mobileNumberPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />
    <TextView
        android:id="@+id/mobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Phone No."
        android:ems="30"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/mobileNumberPrompt"
        android:layout_alignEnd="@+id/mobileNumberPrompt" />

    <Button
        android:id="@+id/buttonlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Logout"
        android:layout_below="@+id/mobileNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />

</RelativeLayout>
